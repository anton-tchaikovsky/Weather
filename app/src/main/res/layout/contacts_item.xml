<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_contact"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15_dp"
        android:layout_marginTop="@dimen/margin_15_dp"
        android:drawablePadding="@dimen/margin_15_dp"
        android:textSize="@dimen/city_item_text_size"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_baseline_contact_phone_24"
        tools:text="name" />

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_15_dp"
        android:layout_marginBottom="@dimen/margin_15_dp"
        android:textSize="@dimen/feels_like_text_size"
        tools:text="number" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@android:color/darker_gray" />

</LinearLayout>